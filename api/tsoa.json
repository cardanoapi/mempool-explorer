{
  "entryFile": "src/index.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": [
    "./src/controllers/**/*.ts"
  ],
  "routes": {
    "routesDir": "./src/routers",
    "controllers": "./src/controllers"
  },
  "spec": {
    "outputDirectory": "public/api/swagger",
    "specVersion": 3
  },
  "koa": {
    "middleware": [
      "./src/middlewares/**/*.ts"
    ]
  },
  "express": {
    "routes": {
      "basePath": "/api"
    }
  }
}
