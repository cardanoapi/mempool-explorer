{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "target": "es2017",
    "outDir": "./dist",
    "module": "CommonJS",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "types": [
      "node",
      // "jest"
    ],
    "paths": {
      "@/*": ["/*"]
    }
  },
  
  "include": [
    "src/**/*.ts",
    "src/**/*.json"
, "src/app.ts"  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}